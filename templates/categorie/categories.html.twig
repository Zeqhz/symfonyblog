{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div>
        <h2>Catégorie {{ categorie.titre }}</h2>
        <p>{{ categorie.articles.count }} Articles trouvés</p>
        {% for article in categorie.articles%}
            <h5>{{ article.titre }}</h5>
            <p class="fst-italic">Crée le {{ article.createdAt | date('d/m/Y') }}</p>
            <a class="btn btn-primary btn-sm" href="{{  path("app_categorie_slug",{slug: categorie.slug })}}" role="button">{{ article.categorie.titre }}</a>
            <p>{{ article.contenu }}</p>
        {% endfor %}
    </div>
{% endblock %}
