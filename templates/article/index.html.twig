{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <h1>liste des articles</h1>
    <ul>
        {% for article in articles %}
            <li><a href="{{ path("app_article_slug",{slug: article.slug }) }}">{{ article.titre }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
